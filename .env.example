# #####################################################################
# # File di configurazione environment - Opero ERP con S3 Integration
# # Copia questo file in .env e modifica i valori secondo la tua configurazione
# #####################################################################

# Database Configuration (configurazione attuale)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=operodb
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=una_chiave_segreta_locale_qualsiasi
JWT_EXPIRES_IN=24h

# Encryption Configuration (configurazione attuale)
ENCRYPTION_SECRET=xxxxxxxxxxxxxxL4eK

# Server Configuration
NODE_ENV=development
PORT=3001
PUBLIC_API_URL=http://localhost:3001

# Aruba S3 Configuration (configurazione attuale)
S3_BUCKET_NAME=operogo
S3_REGION=it-mil-1
S3_ENDPOINT=http://r3-it.storage.cloud.it
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Email Configuration (configurazione attuale)
MAIL_FROM_ADDRESS=opero@difam.it
MAIL_FROM_NAME=Gestionale Opero
MAIL_HOST=smtps.aruba.it
MAIL_PORT=465
MAIL_USER=opero@dominio.it
MAIL_PASS=your-email-password

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Cleanup Configuration (S3)
CLEANUP_ENABLED=true
CLEANUP_SCHEDULE=0 2 * * *  # Ogni giorno alle 2:00 AM
FILE_RETENTION_DAYS=365
TRACKING_RETENTION_DAYS=1095  # 3 anni

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
RATE_LIMIT_WINDOW_MS=900000  # 15 minuti
RATE_LIMIT_MAX_REQUESTS=100

# Development/Debug
DEBUG_SQL=false
DEBUG_S3=false