# ====== CONFIGURAZIONE BLOG MULTI-TENANT ======

# Database
DB_HOST=localhost
DB_NAME=operodb
DB_USER=root
DB_PASSWORD=

# AWS S3 (opzionale per upload PDF/immagini blog)
# Se non configurati, i file verranno salvati localmente
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET=your_bucket_name_here

# API URL (per frontend)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Root domain per multi-tenancy
NEXT_PUBLIC_ROOT_DOMAIN=localhost

# Porte server
BACKEND_PORT=3001
FRONTEND_PORT=3000
